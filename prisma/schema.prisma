generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  email       String      @unique                      
  name        String                                
  password    String
  role        String      @default("user")  // "admin" 또는 "user"                              
  createdAt   DateTime    @default(now())               
  updatedAt   DateTime    @updatedAt
  posts       Post[]      // 사용자가 작성한 게시글들
  comments    Comment[]   // 사용자가 작성한 댓글들
  postLikes   PostLike[]  // 사용자가 좋아요한 게시글들
  commentLikes CommentLike[] // 사용자가 좋아요한 댓글들
}

model Post {
  id        Int        @id @default(autoincrement())
  title     String
  content   String     @db.Text
  views     Int        @default(0)  // 조회수
  authorId  Int
  author    User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  comments  Comment[]  // 게시글에 달린 댓글들
  likes     PostLike[] // 게시글 좋아요
}

model Comment {
  id        Int           @id @default(autoincrement())
  content   String        @db.Text
  postId    Int
  post      Post          @relation(fields: [postId], references: [id], onDelete: Cascade)
  authorId  Int
  author    User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  likes     CommentLike[] // 댓글 좋아요
}

model PostLike {
  id        Int      @id @default(autoincrement())
  postId    Int
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([postId, userId]) // 한 사용자가 같은 게시글에 중복 좋아요 방지
}

model CommentLike {
  id        Int      @id @default(autoincrement())
  commentId Int
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([commentId, userId]) // 한 사용자가 같은 댓글에 중복 좋아요 방지
}

model SiteContent {
  id              Int      @id @default(autoincrement())
  key             String   @unique  // 콘텐츠 식별자 (welcome_message, ministry_intro 등)
  title           String              // 제목
  content         String   @db.Text   // 내용
  imageUrl        String?             // 이미지 URL (선택사항)
  order           Int      @default(0) // 정렬 순서
  isActive        Boolean  @default(true) // 활성화 여부
  updatedAt       DateTime @updatedAt
  updatedBy       Int?                // 수정한 관리자 ID
}

model MainSlide {
  id              Int      @id @default(autoincrement())
  imageUrl        String              // 이미지 경로
  title           String?             // 슬라이드 제목 (선택사항)
  description     String?  @db.Text   // 슬라이드 설명 (선택사항)
  order           Int      @default(0) // 정렬 순서
  isActive        Boolean  @default(true) // 활성화 여부
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Community {
  id              Int      @id @default(autoincrement())
  name            String              // 목장 이름
  leader          String              // 목자 이름
  area            String              // 지역
  members         Int      @default(0) // 구성원 수
  meetingDay      String              // 모임 요일 및 시간
  description     String?  @db.Text   // 목장 설명
  order           Int      @default(0) // 정렬 순서
  isActive        Boolean  @default(true) // 활성화 여부
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Testimonial {
  id              Int      @id @default(autoincrement())
  name            String              // 간증자 이름
  community       String              // 소속 목장/커뮤니티
  content         String   @db.Text   // 간증 내용
  imageUrl        String?             // 프로필 이미지 (선택사항)
  order           Int      @default(0) // 정렬 순서
  isActive        Boolean  @default(true) // 활성화 여부
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Pastor {
  id              Int      @id @default(autoincrement())
  name            String              // 목회자 이름
  position        String              // 직책 (담임목사, 부목사, 전도사 등)
  description     String?  @db.Text   // 소개
  imageUrl        String              // 사진 경로
  order           Int      @default(0) // 정렬 순서
  isActive        Boolean  @default(true) // 활성화 여부
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model MinistryTeam {
  id              Int      @id @default(autoincrement())
  name            String              // 팀 이름
  description     String   @db.Text   // 팀 설명
  activities      String   @db.Text   // 주요 활동 (JSON 배열 문자열)
  icon            String              // FontAwesome 아이콘 클래스
  order           Int      @default(0) // 정렬 순서
  isActive        Boolean  @default(true) // 활성화 여부
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model MinistryInfo {
  id              Int      @id @default(autoincrement())
  key             String   @unique     // info_type (participation_guide, contact_info)
  title           String              // 제목
  content         String   @db.Text   // 내용 (JSON 문자열)
  updatedAt       DateTime @updatedAt
}

model AboutContent {
  id              Int      @id @default(autoincrement())
  key             String   @unique     // vision, mission, history_item, pastor, worship_schedule
  title           String              // 제목
  content         String   @db.Text   // 내용 (JSON 문자열로 저장)
  imageUrl        String?             // 이미지 URL (선택사항)
  order           Int      @default(0) // 정렬 순서
  isActive        Boolean  @default(true) // 활성화 여부
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Event {
  id              Int      @id @default(autoincrement())
  title           String              // 행사 제목
  date            String              // 행사 날짜
  time            String              // 행사 시간
  location        String              // 행사 장소
  description     String   @db.Text   // 행사 설명
  imageUrl        String?             // 이미지 URL (선택사항)
  eventType       String              // upcoming, past, regular
  participants    Int?                // 참석자 수 (지난 행사용)
  order           Int      @default(0) // 정렬 순서
  isActive        Boolean  @default(true) // 활성화 여부
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Family360Content {
  id              Int      @id @default(autoincrement())
  key             String   @unique     // intro_feature, program, activity, step, statistic
  title           String              // 제목
  content         String   @db.Text   // 내용 (JSON 문자열로 저장)
  icon            String?             // FontAwesome 아이콘 (선택사항)
  order           Int      @default(0) // 정렬 순서
  isActive        Boolean  @default(true) // 활성화 여부
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

